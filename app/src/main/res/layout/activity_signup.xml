<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.egco428.a23264.SignupActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/egco" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Username"
        android:id="@+id/username"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="22dp"
        android:textColor="#52B6A2"
        android:background="#5D6D7E"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nametxt"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Password"
        android:id="@+id/password"
        android:background="#5D6D7E"
        android:textColor="#52B6A2"
        android:textSize="22dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@+id/nametxt"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passtxt"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Latitude"
        android:id="@+id/latitude"
        android:background="#5D6D7E"
        android:textColor="#52B6A2"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@+id/passtxt"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Longitude"
        android:id="@+id/longitude"
        android:background="#5D6D7E"
        android:textColor="#52B6A2"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignTop="@+id/latitude"
        android:layout_alignStart="@+id/Longitude" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/Latitude"
        android:layout_below="@+id/latitude"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/Longitude"
        android:layout_below="@+id/longitude"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random by Clicking"
        android:id="@+id/randomBtn"
        android:layout_below="@+id/Latitude"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="random"
        android:background="#52B6A2"
        android:textColor="#e1e0e0" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New User"
        android:id="@+id/addBtn"
        android:layout_below="@+id/randomBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="pressAdd"
        android:textColor="#e1e0e0"
        android:background="#52B6A2"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
